<%= form_tag match_games_path(params[:id]) do %>

  <div class = "row">
    <div class = "small-4 medium-4 large-4 columns">
      <%= label_tag(:server, "Select Server:") %>
      <%= select_tag(:server, options_for_select([['select an option', 0],['Player 1', 1],['Player 2', 2]])) %>
    </div>
  </div>
  <div class = "row">
    <div class = "small-4 medium-4 large-4 columns">
      <%= label_tag(:side, "Scoring:") %>
      <%= select_tag(:side, options_for_select([['select an option', 0],['right', 1],['left', 2]])) %>
    </div>
  </div>
  <div class = "row">
    <div>
      <%= submit_tag("Start Game") %>
    </div>
  </div>
<% end %>